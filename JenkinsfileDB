pipeline {
    agent any
    environment {
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Soufyan-Lekhouaja/ecom_app', branch: 'master'
            }
        }
        stage('Start PostgreSQL (Production)') {
            steps {
                bat "docker-compose -f ${env.DOCKER_COMPOSE_FILE} up -d postgre-prod"
            }
        }
        stage('Wait for PostgreSQL (Sleep)') {
            steps {
                bat '''
                @echo off
                echo Sleeping for 60 seconds to allow postgre-prod to initialize...
                timeout /t 60 >nul
                echo Done waiting.
                '''
            }
        }
    }
    post {
        failure {
            echo 'Production PostgreSQL provisioning failed.'
        }
    }
}
